rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User data - only the user can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Event slots - allow authenticated users to read and write
    // This is for testing purposes - in production, you may want stricter rules
    match /eventSlots/{eventId} {
      allow read: if true; // Anyone can read slot availability
      allow write: if request.auth != null; // Only authenticated users can modify slots
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
